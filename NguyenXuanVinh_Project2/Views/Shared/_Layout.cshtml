@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Truyện Tranh Online</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #2e7d32;
            --accent: #ffb300;
            --shadow: 0 6px 18px rgba(0,0,0,.12);
        }

        body {
            background: #f5f7f6;
            font-family: 'Poppins','Roboto',sans-serif;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            padding: .8rem 1.2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,.06);
        }

            .navbar .nav-link {
                font-weight: 500;
            }

                .navbar .nav-link:hover,
                .navbar .nav-link.active {
                    color: var(--primary);
                }

        /* ===== MINI CART ===== */
        .mini-cart {
            position: absolute;
            top: 120%;
            right: 0;
            width: 280px;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 12px;
            box-shadow: var(--shadow);
            display: none;
            z-index: 1000;
        }

        .cart-wrapper:hover .mini-cart {
            display: block;
        }

        .mini-cart p {
            margin: 0;
            padding: .75rem;
            font-size: .9rem;
        }

        /* ===== BANNER SLIDE ===== */
        .banner-slide .carousel-inner {
            border-radius: 18px;
            overflow: hidden;
            box-shadow: var(--shadow);
        }

        .banner-slide img {
            width: 100%;
            height: 420px;
            object-fit: cover;
            border-radius: 12px;
            transition: transform .5s ease-in-out;
        }

            .banner-slide img:hover {
                transform: scale(1.02);
            }

        /* fade mượt */
        .carousel.carousel-fade .carousel-item {
            opacity: 0;
            transition: opacity 1.2s ease-in-out;
        }

            .carousel.carousel-fade .carousel-item.active,
            .carousel.carousel-fade .carousel-item-next.carousel-item-start,
            .carousel.carousel-fade .carousel-item-prev.carousel-item-end {
                opacity: 1;
            }

        @@media (max-width: 768px) {
            .banner-slide img {
                height: 260px;
            }
        }

        /* ===== HERO TEXT OVERLAY ===== */
        .hero-overlay {
            position: absolute;
            bottom: 20%;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            color: #fff;
            text-shadow: 0 3px 8px rgba(0,0,0,.7);
        }

            .hero-overlay h1 {
                font-size: 2.6rem;
                font-weight: 700;
                -webkit-text-stroke: 1px rgba(0,0,0,.2);
            }

            .hero-overlay .btn {
                margin-top: 1rem;
                padding: 12px 32px;
                border-radius: 40px;
                background: var(--accent);
                color: #222;
                font-weight: 600;
                border: none;
                transition: .25s;
            }

                .hero-overlay .btn:hover {
                    background: #ffa000;
                    transform: translateY(-2px);
                }

        footer {
            background: #fff;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- ===== NAVBAR ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-success d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half"></i> <span>Truyện Tranh Online</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Trang chủ
                            </a>
                        </li>

                        <!-- Danh mục -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-grid"></i> Danh mục
                            </a>
                            <ul class="dropdown-menu shadow">
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index" asp-route-category="manga"><i class="bi bi-book"></i> Truyện tranh</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index" asp-route-category="lightnovel"><i class="bi bi-brightness-alt-high"></i> Light Novel</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index" asp-route-category="gift"><i class="bi bi-gift"></i> Quà tặng</a></li>
                            </ul>
                        </li>

                        <!-- Thông tin -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-info-circle"></i> Thông tin
                            </a>
                            <ul class="dropdown-menu shadow">
                                <li><a class="dropdown-item" asp-controller="Release" asp-action="Index"><i class="bi bi-calendar-event"></i> Lịch phát hành</a></li>
                                <li><a class="dropdown-item" asp-controller="News" asp-action="Index"><i class="bi bi-newspaper"></i> Tin tức</a></li>
                                <li><a class="dropdown-item" asp-controller="Promotion" asp-action="Index"><i class="bi bi-tags"></i> Khuyến mãi</a></li>
                                <li><a class="dropdown-item" asp-controller="Guide" asp-action="Index"><i class="bi bi-question-circle"></i> Hướng dẫn</a></li>
                                <li><a class="dropdown-item" asp-controller="Contact" asp-action="Index"><i class="bi bi-envelope"></i> Liên hệ</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Search -->
                    <form class="d-flex me-3" asp-controller="Books" asp-action="Search" method="get">
                        <input class="form-control me-2" name="query" placeholder="Tìm kiếm...">
                        <button class="btn btn-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <!-- Account + Cart -->
                    <div class="d-flex align-items-center gap-3">
                        @if (Context.Session.GetString("Username") == null)
                        {
                            <div class="dropdown">
                                <a class="btn btn-outline-success dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> Tài khoản
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Đăng nhập</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus"></i> Đăng ký</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="dropdown">
                                <a class="btn btn-outline-dark dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2"></i> Trang quản trị</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
                                </ul>
                            </div>
                        }

                        @{
                            var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
                        }
                        <div class="position-relative cart-wrapper">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-success position-relative">
                                <i class="bi bi-cart3"></i>
                                @if (cartCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@cartCount</span>
                                }
                            </a>
                            <div class="mini-cart text-start">
                                <p><strong>Giỏ hàng:</strong> @cartCount sản phẩm</p>
                                <p class="text-success">Tổng tạm tính sẽ hiển thị ở đây</p>
                                <p class="text-end"><a asp-controller="Cart" asp-action="Index" class="btn btn-sm btn-success">Xem giỏ hàng</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN ===== -->
    <main class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="text-center py-3 border-top mt-auto">
        <div class="container text-muted">
            © 2025 - Truyện Tranh Online | Made with ❤️
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>