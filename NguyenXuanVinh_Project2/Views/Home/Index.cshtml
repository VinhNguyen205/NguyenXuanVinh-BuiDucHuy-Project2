@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero banner -->
<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3 animate__animated animate__fadeInDown">
            Chào mừng đến với <span class="text-warning">Truyện Tranh Online</span>
        </h1>
        <p class="lead text-light mb-4 animate__animated animate__fadeInUp">
            Khám phá kho truyện phong phú – từ truyện chữ, light novel đến manga hot nhất!
        </p>
        <a href="@Url.Action("Index", "Books")" class="btn btn-lg btn-warning shadow-sm px-4">
            🚀 Khám phá ngay
        </a>
    </div>
</div>

<!-- Danh mục -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4 text-center section-title">📚 Danh mục nổi bật</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="category-card h-100">
                <img src="https://cdn-icons-png.flaticon.com/512/3081/3081878.png" alt="Truyện tranh">
                <h5 class="mt-3">Truyện tranh</h5>
                <a href="@Url.Action("Index", "Books")" class="btn btn-outline-success mt-2">Xem ngay</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="category-card h-100">
                <img src="https://cdn-icons-png.flaticon.com/512/2232/2232688.png" alt="Light Novel">
                <h5 class="mt-3">Light Novel</h5>
                <a href="@Url.Action("Index", "Books")" class="btn btn-outline-success mt-2">Xem ngay</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="category-card h-100">
                <img src="https://cdn-icons-png.flaticon.com/512/3209/3209265.png" alt="Quà tặng">
                <h5 class="mt-3">Quà tặng</h5>
                <a href="@Url.Action("Index", "Books")" class="btn btn-outline-success mt-2">Khám phá</a>
            </div>
        </div>
    </div>
</div>

<!-- Gợi ý sản phẩm -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4 text-center section-title">🔥 Sản phẩm gợi ý</h2>
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/tuphuc.webp" alt="Thiên Quan Tứ Phúc">
                <div class="book-card-body">
                    <h6>Thiên Quan Tứ Phúc Tập 1</h6>
                    <p class="price">120.000đ</p>
                    <a href="#" class="btn-add"><i class="bi bi-cart-plus"></i> Add To Cart</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/daupha.jpg" alt="Đấu Phá Thương Khung">
                <div class="book-card-body">
                    <h6>Đấu Phá Thương Khung Tập 1</h6>
                    <p class="price">95.000đ</p>
                    <a href="#" class="btn-add"><i class="bi bi-cart-plus"></i> Add To Cart</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/op100.jpg" alt="One Piece 100">
                <div class="book-card-body">
                    <h6>One Piece Tập 100</h6>
                    <p class="price">60.000đ</p>
                    <a href="#" class="btn-add"><i class="bi bi-cart-plus"></i> Add To Cart</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/conan.jpg" alt="Detective Conan">
                <div class="book-card-body">
                    <h6>Detective Conan Special Edition</h6>
                    <p class="price">70.000đ</p>
                    <a href="#" class="btn-add"><i class="bi bi-cart-plus"></i> Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>
