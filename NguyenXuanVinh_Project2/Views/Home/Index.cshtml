@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero banner -->
<section class="hero-section text-center mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-white mb-3 animate__animated animate__fadeInDown">
            <i class="bi bi-book-half me-2"></i>
            Chào mừng đến với <span class="text-warning">Mèo Mê Manga</span>
        </h1>
        <p class="lead text-light mb-4 animate__animated animate__fadeInUp">
            Kho Truyện Phong Phú – Manga, Light Novel, Comic & More!
        </p>
        <a href="@Url.Action("Index", "Books")"
           class="btn btn-lg btn-warning shadow-sm px-4">
            <i class="bi bi-rocket-takeoff-fill me-1"></i> Khám Phá Ngay
        </a>
    </div>
</section>

<!-- Danh mục nổi bật -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4 text-center section-title">
        <i class="bi bi-grid-3x3-gap-fill me-1"></i> Danh Mục Nổi Bật
    </h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="category-card h-100">
                <i class="bi bi-book fs-1 text-success"></i>
                <h5 class="mt-3">Truyện tranh</h5>
                <a href="@Url.Action("Index", "Books")"
                   class="btn btn-outline-success mt-2">
                    <i class="bi bi-eye"></i> Xem Ngay
                </a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="category-card h-100">
                <i class="bi bi-journals fs-1 text-success"></i>
                <h5 class="mt-3">Light Novel</h5>
                <a href="@Url.Action("Index", "Books")"
                   class="btn btn-outline-success mt-2">
                    <i class="bi bi-eye"></i> Xem Ngay
                </a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="category-card h-100">
                <i class="bi bi-gift-fill fs-1 text-success"></i>
                <h5 class="mt-3">Quà tặng</h5>
                <a href="@Url.Action("Index", "Gifts")"
                   class="btn btn-outline-success mt-2">
                    <i class="bi bi-search-heart"></i> Khám Phá
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Deal trong ngày (tuỳ chọn) -->
<div class="container mb-5">
    <div class="bg-success bg-gradient text-white rounded-4 p-4 text-center shadow-sm">
        <h3 class="fw-bold mb-2">
            <i class="bi bi-fire me-1"></i> Deal Hôm Nay
        </h3>
        <p class="mb-3">Giảm giá sốc cho các bộ truyện hot – số lượng giới hạn!</p>
        <a href="@Url.Action("Index","Books")"
           class="btn btn-warning fw-semibold px-4">
            <i class="bi bi-lightning-charge-fill me-1"></i> Mua Ngay
        </a>
    </div>
</div>

<!-- Sản phẩm gợi ý -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4 text-center section-title">
        <i class="bi bi-stars me-1"></i> Sản Phẩm Gợi Ý
    </h2>
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/tuphuc.webp" alt="Thiên Quan Tứ Phúc">
                <div class="book-card-body">
                    <h6>Thiên Quan Tứ Phúc Tập 1</h6>
                    <p class="price">120.000đ</p>
                    <a href="#" class="btn-add">
                        <i class="bi bi-cart-plus"></i> Add To Cart
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/daupha.jpg" alt="Đấu Phá Thương Khung">
                <div class="book-card-body">
                    <h6>Đấu Phá Thương Khung Tập 1</h6>
                    <p class="price">95.000đ</p>
                    <a href="#" class="btn-add">
                        <i class="bi bi-cart-plus"></i> Add To Cart
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/opnew.webp" alt="One Piece 100">
                <div class="book-card-body">
                    <h6>One Piece Tập 100</h6>
                    <p class="price">60.000đ</p>
                    <a href="#" class="btn-add">
                        <i class="bi bi-cart-plus"></i> Add To Cart
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="book-card">
                <img src="~/images/home/conan.jpg" alt="Detective Conan">
                <div class="book-card-body">
                    <h6>Detective Conan Special Edition</h6>
                    <p class="price">70.000đ</p>
                    <a href="#" class="btn-add">
                        <i class="bi bi-cart-plus"></i> Add To Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tin tức / blog nhỏ -->
<div class="container mb-5">
    <h2 class="fw-bold mb-4 text-center section-title">
        <i class="bi bi-newspaper me-1"></i> Tin tức & Review
    </h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="p-3 bg-white rounded-4 shadow-sm h-100">
                <h6 class="fw-bold mb-2">[Review] One Piece tập 100</h6>
                <p class="text-muted small mb-2">Cập nhật 20/09/2025</p>
                <p class="small">Tập 100 đánh dấu cột mốc lớn với trận chiến Wano…</p>
                <a href="#" class="text-success small"><i class="bi bi-chevron-right"></i> Đọc tiếp</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 bg-white rounded-4 shadow-sm h-100">
                <h6 class="fw-bold mb-2">Top Light Novel tháng 9</h6>
                <p class="text-muted small mb-2">Cập nhật 18/09/2025</p>
                <p class="small">Danh sách 5 bộ Light Novel bán chạy nhất…</p>
                <a href="#" class="text-success small"><i class="bi bi-chevron-right"></i> Xem thêm</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 bg-white rounded-4 shadow-sm h-100">
                <h6 class="fw-bold mb-2">Khuyến mãi mùa thu</h6>
                <p class="text-muted small mb-2">Đến 30/09/2025</p>
                <p class="small">Giảm tới 40% cho hàng trăm đầu truyện hot…</p>
                <a href="#" class="text-success small"><i class="bi bi-chevron-right"></i> Xem chi tiết</a>
            </div>
        </div>
    </div>
</div>
