@model NguyenXuanVinh_Project2.Models.Book

@{
    ViewData["Title"] = "Xóa Truyện";
}

<h1>Xóa Truyện</h1>

<h3>Bạn có chắc muốn xóa truyện này?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Thể loại</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Nhà xuất bản</dt>
        <dd class="col-sm-10">@Model.Publisher?.PublisherName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
