@{
    ViewData["Title"] = "Đăng nhập";
    var role = Context.Session.GetString("Role");
}

<div class="auth-background">
    <div class="auth-card">
        <h3 class="auth-title">🔐 Đăng nhập</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập" required />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu" required />
            </div>
            <button type="submit" class="btn btn-auth w-100">Đăng nhập</button>
        </form>

        <div class="auth-footer">
            <p>
                Chưa có tài khoản?
                <a asp-controller="Account" asp-action="Register">Đăng ký</a>
            </p>
            @if (role == "Admin")
            {
                <p>👑 <a asp-controller="Account" asp-action="RegisterAdmin" class="text-danger">Tạo Admin</a></p>
            }
        </div>
    </div>
</div>
