@model NguyenXuanVinh_Project2.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 register-card" style="width: 400px;">
        <div class="text-center mt-4">
            <div class="register-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center">
                <i class="bi bi-pencil-square fs-2"></i>
            </div>
            <h3 class="fw-bold text-success mt-2">Đăng ký</h3>
            <p class="text-muted small">Tạo tài khoản mới để trải nghiệm website</p>
        </div>

        <div class="card-body px-4 pb-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center rounded-3 shadow-sm">@TempData["Success"]</div>
            }

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-semibold"></label>
                    <input asp-for="Username" class="form-control rounded-3 shadow-sm" placeholder="Nhập tên đăng nhập" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" type="email" class="form-control rounded-3 shadow-sm" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-3 shadow-sm" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3 shadow-sm" placeholder="Xác nhận mật khẩu" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-success w-100 rounded-3 fw-bold shadow-sm">
                    <i class="bi bi-person-plus"></i> Đăng ký
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-success fw-semibold">← Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
